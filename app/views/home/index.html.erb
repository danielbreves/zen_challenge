<script type="text/x-handlebars" data-template-name="application">
  {{outlet}}
</script>

<script type="text/x-handlebars" data-template-name="songs">
	<h1>Home</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Song Title</th>
				<th>Artist</th>
				<th>Votes</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>

		  {{#each song in controller}}
					<tr class="song">
						<td><a href="#" {{action "showSong" song}}>{{song.title}}</a></td>
						<td>{{song.artist}}</td>
						<td>{{song.votes}}</td>
						<td class="up_vote">
							<a href="#" class="btn" {{action "upVote" target="song"}}><i class="icon-heart"></i></a>
						</td>
					</tr>
			{{/each}}

		</tbody>
	</table>
</script>

<script type="text/x-handlebars" data-template-name="song">
	<div class="page-header">
		<h1>{{title}}</h1>
		<h5>by <em>{{artist}}</em></h5>
	</div>
	<a href="#" class="btn" {{action "showSongs"}}>Back</a>
</script>