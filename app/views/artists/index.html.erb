<div class="page-header">
  <h1>Artists</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Artists</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.id %></td>
    <td><%= link_to artist.name, artist %></td>
    <td><%=l artist.created_at %></td>
    <td>
      <%= link_to 'Edit', edit_artist_path(artist),
        :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', artist,
        method: :delete,
        data: { confirm: 'Are you sure?' },
        :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Artist', new_artist_path, :class => 'btn btn-primary' %>
